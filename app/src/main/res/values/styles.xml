<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>

        <item name="buttonStyle">@style/defaultButtonStyle</item>
        <item name="android:textViewStyle">@style/defaultTextViewStyle</item>
    </style>

    <style name="defaultButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/default_button_shape</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">@dimen/default_button_text_size</item>
    </style>

    <style name="defaultTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="smallTextViewStyle" parent="defaultTextViewStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="numberSelectTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="defaultDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="colorPickerDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="gameButtonStyle" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/load_item_shape</item>
    </style>

    <style name="loadViewTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/load_item_shape</item>
    </style>

</resources>
